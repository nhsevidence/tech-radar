<div id="desc">
    <h4>Tech description</h4>
    {% if tech %}
    <div class="tech-breadcrumb">
        <p>{{category}} <i class="divider icon-chevron-right"></i> <span>{{tech.status}}</span></p>
    </div>
    <h2 class="tech-name">{{tech.name}}</h2>
    <p class="tech-desc">{{tech.desc}}</p>    
    <a class="tech-more-info" href="{{tech.moreinfo}}">More info</a>
    {% else %}
    <div class="centre">
    <p class="default">Select a technology from the dashboard to view it here</p>
    </div>
    {% endif %}
</div>
